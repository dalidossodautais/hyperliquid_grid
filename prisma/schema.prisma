generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  resetToken    String?
  resetTokenExpiry DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  connections   CCXTConnection[]
}

model CCXTConnection {
  id            String    @id @default(cuid())
  name          String    // Nom donné par l'utilisateur à cette connexion
  exchange      String    // Nom de l'exchange (binance, ftx, etc.)
  apiKey        String    // Clé API
  apiSecret     String    // Secret API
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  userId        String    // ID de l'utilisateur propriétaire
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
